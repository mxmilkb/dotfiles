# container/window colours
# class                 border  backgr. text    indicator child_border
client.focused          #4f2877 #4f2877 #ffffff #45FE28   #d7af87
client.focused_inactive #333333 #5f676a #ffffff #484e50   #5f676a
client.unfocused        #333333 #222222 #c5c5c5 #292d2e   #222222
client.urgent           #2f343a #aa0000 #ffffff #aa0000   #aa0000 
client.placeholder      #000000 #0c0c0c #ffffff #000000   #0c0c0c

client.background       #000000

## border style; show titles or not. the border toggle feature loses the 4px
bindsym $mod+n border normal
bindsym $mod+Shift+n border pixel 1

# set borders and gaps
new_window pixel 1
new_float pixel 1

gaps inner 0
gaps outer 0


# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)

bar {
	# status_command "i3status --config ~/.config/i3/istatus"
  status_command "py3status -c ~/.config/i3/istatus_$(hostname)"

	position       top
	separator_symbol " "
  strip_workspace_numbers yes
	bindsym button4 nop
  bindsym button5 nop
  binding_mode_indicator yes

	# colour via http://paletton.com/#uid=74y0u0km+m7devAiGqmrohGxCce
	colors {
  	background #000000
    statusline #ffffff
    # class            border 	backgrd  text
		focused_workspace  #4f2877  #4f2877  #ffffff
    active_workspace   #555555 	#555555  #ffffff
    inactive_workspace #000000 	#000000  #c5c5c5
		urgent_workspace   #aa0000  #aa0000  #ffffff
	}
}

# disable mousewheel workspace change on bar
# bindsym button4 nop
# bindsym button5 nop


# switch workspaces on mod+mousewheel up/down
bindsym --whole-window --border $mod+button4 workspace next_on_output
bindsym --whole-window --border $mod+button5 workspace prev_on_output

# revert gtk hijack of shift-insert back to PRIMARY rather than CLIPBOARD
bindsym Shift+Insert exec "xdotool click 2"

# make sure the initial desktop is the first one
exec i3-msg workspace "10"

# Start my defaults layouts on boot
# exec --no-startup-id "i3-msg 'workspace 1; append_layout ~/.config/i3/workspace-1.json'"

for_window [class=".*"] title_format " %title

for_window [urgent=last] border pixel 3
exec i3-onfocus.py
force_display_urgency_hint 2000 ms
