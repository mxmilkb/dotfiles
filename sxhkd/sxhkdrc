#
# bspwm hotkeys
#

super + alt + Escape
	bspc quit

# close
super + w
	bspc window -c

# cycle layout
super + n
	bspc desktop -l next

# balance
super + b
	bspc desktop -B

# toggle floating or fullscreen window
super + {s,f}
	bspc window -t {floating,fullscreen}

# switch between last window with tab or desktop with `
super + {grave,Tab}
	bspc {desktop,window} -f last

# swap window with last window
super + apostrophe
	bspc window -s last

#super + {o,i}
#	bspc control --record-history off; \
#	bspc window {older,newer} -f; \
#	bspc control --record-history on


# switch between monitors
super + o
	bspc monitor -f next

# move window between monitors
super + alt + o
  bspc window -m next

# move window between monitors and follow
super + shift + o
	bspc window -m next -f


super + {Left,Right}
	bspc desktop -f {prev,next}

super + bracket{left,right}
  bspc desktop -f {prev,next}

super + alt + {Left,Right}
	bspc window -d {prev,next}

# move window to left/right desktop and follow
super + shift + {Left,Right}
	bspc window -d {prev,next} -f

# swap window with largest window
super + m
	bspc window -s biggest

super + {_,shift + }{h,j,k,l}
	bspc window -{f,s} {left,down,up,right}

super + {t,y}
  bspc window -f {next.floating,next.tiled}

super + {comma,period}
	bspc desktop -C {backward,forward}

super + ctrl + {h,j,k,l}
	bspc window -p {left,down,up,right}

super + ctrl + {_,shift + }space
	bspc {window -p cancel,desktop -c}

# make bigger
super + alt + {h,j,k,l}
	bspc window -e {left -10,down +10,down -10,left +10}

# make smaller
#super + alt + shift + {h,j,k,l}
#	bspc window -e {right -10,up +10,up -10,right +10}

super + ctrl + {1-9}
	bspc window -r 0.{1-9}

super + {1-9,0}
  bspc desktop -f ^{1-9,10}

super + shift + {1-9,0}
	bspc window -d ^{1-9,10} -f

super + alt + {1-9}
  bspc window -d ^{1-9}

~button1
	bspc pointer -g focus

super + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}

# motion
super + !button{1-3}
	bspc pointer -t %i %i

# release
super + @button{1-3}
	bspc pointer -u

super + button{4,5}
  bspc desktop -f {prev,next}

# rotate window tree on desktop
super + {r,ctrl + r}
  bspc desktop -R {270,90}


#
# wm independent hotkeys
#

#super + Return
#  urxvtc

super + Return
  if [ $(bspc query -W -w next) ]; then urxvtc; else bspc rule -a \* --one-shot split_dir=down; urxvtc; fi 

super + ctrl + Return
#	rulc -a true floating=true duration=1 | urxvtc
  bspc rule -a \* --one-shot floating=on | urxvtc

super + alt + space
  dmenu_run -h 22
  # xboomx

super + space
  ~/bin/dmenu_run.pl -h 22

# make sxhkd reload its configuration files:
super + Escape  
  pkill -USR1 -x sxhkd

super + alt + {_,shift + }Escape
  {bspc query -T > "$BSPWM_TREE"; \
    bspc query -H > "$BSPWM_HISTORY"; \
    bspc query -S > "$BSPWM_STACK"; \
    bspc quit,\
   bspc quit 1}
